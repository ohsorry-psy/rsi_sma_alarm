# 🔐 텔레그램 봇 토큰 (절대 노출 금지)
# @BotFather 에서 발급받은 토큰 입력
TELEGRAM_TOKEN=your_telegram_token_here

# 📩 텔레그램 채팅 ID
# @userinfobot 또는 @get_id_bot 에서 본인 ID 확인 가능
TELEGRAM_CHAT_ID=your_chat_id_here

# ✅ 알림 전송 여부 (True = 알림 전송 / False = 전송 안 함)
SEND_ALERT=True

# 🐍 Flask 디버그 모드
# 로컬 개발용 True / 배포 시 반드시 False 또는 주석 처리
FLASK_DEBUG=True
